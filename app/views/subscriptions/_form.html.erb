<%= simple_form_for(@subscription, html: {class: "col-sm-6 col-sm-offset-3"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.collection_select(:entity_type_id, 
      @entity_types, :id, :name,
      {:prompt => 'Please select an entity_type'}, class:"form-control")  %>
  </div>

  <div class="form-group">
    <%= f.button :submit, class:"form-control btn btn-primary" %>
  </div>
  
  <div class="form-group">
    <%= link_to 'Back', subscriptions_path, class:"btn btn-info form-control" %>
  </div>

<% end %>
