<h1> Listing subscriptions </h1>
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th> Entity type </th>
      <th> </th>
      <th> </th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= entity_type_name(subscription.entity_type_id) %></td>
        <td><%= link_to 'Unsubscribe', "subscriptions/#{subscription.id}", data: {:confirm => 'Are you sure?'}, :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Subscription', new_subscription_path, class:"btn btn-info" %>
